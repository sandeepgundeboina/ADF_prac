{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "sandeep-adf-dm"
		},
		"trigger1_properties_FilterDemo1_parameters_PlayerName": {
			"type": "string",
			"defaultValue": "Kohli"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/trigger1')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"runtimeState": "Started",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "FilterDemo1",
							"type": "PipelineReference"
						},
						"parameters": {
							"PlayerName": "[parameters('trigger1_properties_FilterDemo1_parameters_PlayerName')]"
						}
					}
				],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Month",
						"interval": 1,
						"startTime": "2025-11-10T12:42:00",
						"endTime": "2025-11-11T13:06:40",
						"timeZone": "India Standard Time",
						"schedule": {
							"minutes": [
								0
							],
							"hours": [
								1
							],
							"monthlyOccurrences": [
								{
									"day": "Sunday",
									"occurrence": 1
								}
							]
						}
					}
				}
			},
			"dependsOn": []
		}
	]
}